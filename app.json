{
  "expo": {
    "name": "QR Card Creator",
    "slug": "qr-card-creator",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f0f1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.qrcardcreator.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to scan QR codes.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to save QR cards."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f0f1a"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.qrcardcreator.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow QR Card Creator to access your camera to scan QR codes."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow QR Card Creator to save your QR cards to your photo library.",
          "savePhotosPermission": "Allow QR Card Creator to save your QR cards to your photo library."
        }
      ]
    ]
  }
}